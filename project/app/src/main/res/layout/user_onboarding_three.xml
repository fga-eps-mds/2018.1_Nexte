<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2E2E2E"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/phone_left_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textOnTop"
            android:layout_width="226dp"
            android:layout_height="77dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Seu clube não está registrado? Entre em contato conosco!"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email_and_phone"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="E-mail ou telefone"
            android:textColor="#c5c5c5"
            app:layout_constraintBottom_toTopOf="@+id/phoneField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/phone_line_left"
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:background="#ffff"
            app:layout_constraintEnd_toStartOf="@+id/email_and_phone"
            tools:layout_editor_absoluteY="167dp" />

        <View
            android:id="@+id/phone_line_right"
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:background="#ffff"
            app:layout_constraintStart_toEndOf="@+id/email_and_phone"
            tools:layout_editor_absoluteY="167dp" />

        <EditText
            android:id="@+id/phoneField"
            android:layout_width="317"
            android:layout_height="27dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="188dp"
            android:background="#a7252525"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/requestField"
            android:layout_width="317dp"
            android:layout_height="155dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="280dp"
            android:background="#a7252525"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/requestText"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="Solicitação de registro"
            android:textColor="#c5c5c5"
            app:layout_constraintBottom_toTopOf="@+id/requestField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/request_line_left"
            android:layout_width="72dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:background="#ffff"
            app:layout_constraintStart_toEndOf="@+id/requestText"
            tools:layout_editor_absoluteY="255dp" />

        <View
            android:id="@+id/request_line_right"
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:background="#ffff"
            app:layout_constraintEnd_toStartOf="@+id/requestText"
            tools:layout_editor_absoluteY="255dp" />

        <Button
            android:id="@+id/sentRequestButton"
            android:layout_width="317"
            android:layout_height="21dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="472dp"
            android:background="#a7252525"
            android:text="Enviar"
            android:textColor="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>